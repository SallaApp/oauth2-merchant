{
    "name": "salla/ouath2-merchant",
    "description": "Salla OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "salla"
    ],
    "homepage": "https://github.com/sallaApp/ouath2-merchant",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ahmed Bally",
            "email": "ahmed.bally@salla.sa"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "eloquent/phony-phpunit": "^4.0.0",
        "phpunit/phpunit": "~7.0.0",
        "mockery/mockery": "~1.3.0",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "php-coveralls/php-coveralls": "^2.1",
        "squizlabs/php_codesniffer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Salla\\OAuth2\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Salla\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs src --standard=psr2 -sp"
    },
    "config": {
        "sort-packages": true
    }
}
